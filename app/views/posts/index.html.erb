<h2>All posts</h2>

<% @posts.each do |post| %>
<% next unless post.user.present? %>
<div>
  <%= link_to image_tag(post.img, :class => 'thumb', :alt => post.content), post if post.img.present? %>
</div>
<%= image_tag post.user.img if post.user.img.present? %>
<p><%= post.user.name %></p>
<p><%= link_to post.content, post if post.content.present? %></p>
<% end %>
